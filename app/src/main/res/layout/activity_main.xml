                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b9" android:onClick="buclick"/>
        <Button
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b8" android:onClick="buclick"/>
        <Button
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b7" android:onClick="buclick"/>
    </TableRow>
</TableLayout>